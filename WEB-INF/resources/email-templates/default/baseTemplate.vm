<div style="color:#333;font-family:Arial,sans-serif;font-size:14px;line-height:1.429">
  <table cellpadding="0" cellspacing="0" width="100%" style="border-collapse:collapse;background-color:#f5f5f5;">
    <tbody>
      <tr>
        <td style="border-collapse:collapse;padding:0 20px">
          <table cellpadding="0" cellspacing="0" width="100%" style="border-collapse:collapse;table-layout:fixed;">
            <tbody>
              <tr>
                <td style="border-collapse:collapse;padding:10px 10px 10px 0px;line-height:20px;width:30px;">
                  <img src="$appUrl/images/os_email_logo.png" height="30px"/>
                </td>
                #if (!!$headerContent)
                  <td style="border-collapse:collapse;padding:10px 10px 10px 0px;line-height:20px">
                    <span>$headerContent</span>
                  </td>
                #end
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
      <tr>
        <td style="border-collapse:collapse;padding:0 20px">
          <table cellpadding="0" cellspacing="0" width="100%">
            <tbody>
              <tr>
                <td style="border: 1px solid #ccc; border-radius: 5px; background-color:#fff; padding: 15px;">
                  #if ($templateContent)
                    #evaluate ($templateContent)
                  #else
                    #parse( $template )
                  #end
                </td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
      <tr>
        <td style="border-collapse:collapse;padding:13px 20px">
          <table cellspacing="0" cellpadding="0" border="0" style="border-collapse:collapse">
            <tbody>
              <tr>
                <td width="100%" style="padding:0px;border-collapse:collapse;color:#999;font-size:12px;line-height:18px;font-family:Arial,sans-serif">This message was sent by OpenSpecimen</td>
                <td valign="top" style="padding:0px;border-collapse:collapse;padding-left:20px;vertical-align:top"></td>
              </tr>
            </tbody>
          </table>
        </td>
      </tr>
    </tbody>
  </table>
</div>

